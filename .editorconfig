root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

[*.{py}]
indent_style = space
indent_size = 4

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{js,json}]
indent_style = tab

[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false
